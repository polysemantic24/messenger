<div class="ui tiny menu">
  <div class="ui container">
    <%= link_to "Chatroom", root_path, class: "item" %>
    <a class="item">
      Messages
    </a>
    <div class="right menu">
      <div class="ui dropdown item">
        <% if !logged_in? %>
          <%= "Account" %><i class="dropdown icon"></i>
        <% else %>
          <%= current_user.username %><i class="dropdown icon"></i>
        <% end %>
        <div class="menu">
          <% if logged_in? %>
            <%= link_to "Log out", logout_path, method: :delete, class: "item" %>
          <% else %>
            <%= link_to "Log in", login_path, class: "item" %>
          <% end %>
        </div>
      </div>
      <% if !logged_in? %>
      <div class="item">
        <%= link_to "Sign Up", signup_path, class: "ui green button" %>
      </div>
      <% end %>
    </div>
  </div>
</div>