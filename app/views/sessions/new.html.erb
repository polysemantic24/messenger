<h2 class="ui center aligned medium icon header">
  <i class="green paper plane icon"></i>
  Log in to continue
</h2>

<div class="ui placeholder segment">
    <div class="column">
      <%= form_for(:session, html: {class: "ui form"}, url: login_path) do |f| %> 
        <div class="field">
          <%= f.label :username %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password %>
          <div class="ui left icon input">
            <%= f.password_field :password %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit "Login", class: "ui green submit button" %>
      <% end %>
    </div>
</div>