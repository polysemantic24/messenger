<h2 class="ui center aligned medium icon header">
  <i class="green paper plane icon"></i>
  chatalker
</h2>

<div class="ui two column grid">

  <div class="twelve wide column">
    <div class="ui fluid card chatbox">
      <div class="content id="messages">
        
        <div class="ui small feed" id="message-container">
          <%= render @messages %>
        </div>

      </div>
      <div class="extra content">
        <%= form_with(model: @message, url: message_path, class: "ui reply form", remote: true) do |f| %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= f.text_field :body, placeholder: "Enter a message" %>
              <%= f.button '<i class="bordered green edit icon"></i>'.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid card chatbox">
      <div class="content2">

        <div class="ui vertical menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>

      </div>
    </div>
  </div>

</div>