<h2 class="ui center aligned medium icon header">
  <i class="green paper plane icon"></i>
  chatalker
</h2>

<div class="ui two column grid">

  <div class="twelve wide column">
    <div class="ui fluid card chatbox">
      <div class="content">
        <% @messages.each do |message| %>
          <div class="ui small feed">
            
            <div class="event">
              <div class="content">

                <em>Christian Rocha</em>: <%= link_to message.body, root_path(message), class: "summary" %>

              </div>
            </div>
            
          </div>
        <% end %>
      </div>
      <div class="extra content">
        <form class="ui reply form">
          <div class="field">
            <div class="ui fluid icon input">
              <input type="text" placeholder="Enter a message...">
              <i class="bordered green edit icon"></i>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid card chatbox">
      <div class="content2">

        <div class="ui vertical menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>

      </div>
    </div>
  </div>

</div>